<html>
	<head>
		<title>Criar produto</title>
	</head>
	<body>
		<div class="erros">
			<% for(var i; i < erros.legth; i++){ %>
				<span><%= erro[i].param - erro[i].msg %></span>
			<% } %>
		</div>
		<form action="/produtos" method="post">
			<div>
				<input type="text" id="nome" name="nome" placeholder="Nome" />
			</div>
			<div>
				<input type="text" id="preco" name="preco" placeholder="Preço" />
			</div>
			<div>
				<textarea cols="20" rows="10" id="descricao" name="descricao" placeholder="Faça uma breve descrição do produto"></textarea>
			</div>
			<input type="submit" value="Salvar" />
		</form>
	</body>
</html>